<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RateUs" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/red_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.RateUs" parent="Base.Theme.RateUs" />

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">

        <!--  Non selected color -->
        <item name="colorControlNormal">@color/grey</item>

        <!--   Selected color -->
        <item name="colorControlActivated">@color/red_500</item>
    </style>
</resources>